<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x_400"
    android:layout_height="@dimen/y_640"
    android:id="@+id/main"
    android:background="@drawable/float_background"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_88"
        android:background="@drawable/float_title_background">
        <TextView
            style="@style/focusStyle"
            android:id="@+id/title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_settings"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/x_22" />
    </FrameLayout>



</FrameLayout>